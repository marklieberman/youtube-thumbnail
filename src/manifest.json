{

  "manifest_version": 2,
  "name": "Youtube Thumbnail",
  "version": "1.0.0",

  "description": "Add a page action to YouTube that captures a frame of video to the clipboard.",

  "icons": {
    "48": "icons/film-black.svg",
    "96": "icons/film-black.svg"
  },

  "permissions": [
    "activeTab",
    "clipboardWrite"
  ],

  "page_action": {
    "browser_style": false,
    "default_title": "Capture Frame",
    "default_icon": "icons/film-dark.svg",
    "show_matches": [
      "https://*.youtube.com/watch*"
    ]
  },

  "background": {
    "scripts": [
      "background.js"
    ]
  }

}
